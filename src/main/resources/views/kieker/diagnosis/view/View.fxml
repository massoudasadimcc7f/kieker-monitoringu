<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="ivView" xmlns:fx="http://javafx.com/fxml">

	<MenuBar>
		<Menu text="%View.mntmFile.text" id="file">
			<MenuItem text="%View.mntmOpenMonitoringLog.text" onAction="#showImportDialog" id="openMonitoringLog"/>
			<SeparatorMenuItem />
			<MenuItem text="%View.mntmSettings.text" onAction="#showSettings" id="settings" />
			<SeparatorMenuItem />
			<MenuItem text="%View.mntmExit.text" onAction="#close"/>
		</Menu>
		<Menu text="%View.mntmHelp.text" id="help">
			<MenuItem text="%reportBugsAndFeatures" onAction="#showBugReporting"/>
			<SeparatorMenuItem />
			<MenuItem text="%View.mntmAbout.text" onAction="#showAbout" id="about"/>
		</Menu>
	</MenuBar>

	<HBox VBox.vgrow="ALWAYS">
		<FlowPane orientation="VERTICAL" columnHalignment="CENTER"
			vgap="10">

			<Button text="%View.trtmTraces.text(java.lang.String)" fx:id="ivTraces" wrapText="true" prefWidth="180" onAction="#showTraces">
				<FlowPane.margin>
					<javafx.geometry.Insets left="10" top="10" />
				</FlowPane.margin>
			</Button>
			<Button text="%View.trtmAggregatedTraces.text(java.lang.String)" fx:id="ivAggregatedtraces" prefWidth="180" onAction="#showAggregatedTraces">
				<FlowPane.margin>
					<javafx.geometry.Insets left="10" top="10" />
				</FlowPane.margin>
			</Button>
			<Button text="%View.trtmOperationCalls.text(java.lang.String)" fx:id="ivCalls" prefWidth="180" onAction="#showCalls">
				<FlowPane.margin>
					<javafx.geometry.Insets left="10" top="10" />
				</FlowPane.margin>
			</Button>
			<Button text="%View.trtmAggregatedOperationCalls.text(java.lang.String)" fx:id="ivAggregatedcalls" prefWidth="180" onAction="#showAggregatedCalls">
				<FlowPane.margin>
					<javafx.geometry.Insets left="10" top="10" />
				</FlowPane.margin>
			</Button>
			<Button text="%View.trtmMonitoringLogStatistics.text(java.lang.String)" fx:id="ivStatistics" prefWidth="180" onAction="#showStatistics">
				<FlowPane.margin>
					<javafx.geometry.Insets left="10" top="10" />
				</FlowPane.margin>
			</Button>
		</FlowPane>

		<AnchorPane fx:id="ivContent" HBox.hgrow="ALWAYS">
			<HBox.margin>
				<javafx.geometry.Insets left="10" top="10" bottom="10" right="10" />
			</HBox.margin>
		</AnchorPane>
		
	</HBox>

</VBox>